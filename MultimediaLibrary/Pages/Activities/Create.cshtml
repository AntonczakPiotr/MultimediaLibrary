@page
@model MultimediaLibrary.Pages.Activities.CreateModel

@using MultimediaLibrary.Enums
@{
    ViewData["Title"] = "Nowa aktywność";
}

<h1>Dodawanie</h1>

<h4>Rejestrowanie nowej aktywności</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Activity.SupplyID" class="control-label"></label>
                <select asp-for="Activity.SupplyID" class="form-control" asp-items="ViewBag.SupplyID">
                    <option selected="selected" value="">Nie określono</option>
                </select>
                <span asp-validation-for="Activity.SupplyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.PersonID" class="control-label"></label>
                <select asp-for="Activity.PersonID" class="form-control" asp-items="ViewBag.PersonID">
                    <option selected="selected" value="">Nie określono</option>
                </select>
                <span asp-validation-for="Activity.PersonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.ActivityType" class="control-label"></label>
                <select asp-for="Activity.ActivityType" class="form-control" asp-items="Html.GetEnumSelectList<ActivityType>()">
                    <option selected="selected" value="">Nie określono</option>
                </select>
                <span asp-validation-for="Activity.ActivityType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zarejestruj nową aktywność" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
